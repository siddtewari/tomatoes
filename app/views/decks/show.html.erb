<%= link_to "All Decks", decks_path %>
<hr />

<div> <b> <%= @deck.name %> </b> </div>
<hr />

<% @cards.each do |card| %>
	<div> 
		<%= link_to card.front, [@deck, card] %> 
		-
		<%= link_to "Edit", edit_deck_card_path(@deck, card) %>
		<%= link_to "Delete", [@deck, card], method: :delete, confirm: "Are you sure?" %>
	</div>
<% end %>

<hr />

<div>
	<%= link_to "Create New Card", new_deck_card_path(@deck) %>
</div>